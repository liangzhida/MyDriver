<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragments.MainFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/vip"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="VIP课程"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/jiqiao"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="图标技巧"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/tuji"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="2小时突击"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/cuoti"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="错题.收藏"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"

                        android:orientation="vertical"
                        android:layout_height="200dp">
                        <LinearLayout
                            android:id="@+id/llshunxu"
                            android:background="@drawable/bg"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="120dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="顺序练习"
                                android:textColor="#ffffff"
                                android:textSize="28dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="11/33333"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical"
                        android:layout_height="200dp">
                        <LinearLayout
                            android:id="@+id/llmoni"
                            android:background="@drawable/bg1"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="120dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="模拟考试"
                                android:textColor="#ffffff"
                                android:textSize="28dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="未考试"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content"></TextView>

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/suiji"
                            android:id="@+id/imgsuiji"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="随机练习"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/zhuanxian"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="专项练习"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/timu"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="精简500题"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@mipmap/shijuan"
                            android:layout_gravity="center"
                            android:layout_height="40dp"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="考前秘卷"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="80dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"

                        android:text="更多服务"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/llweizhang"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/weizhang"
                            android:layout_height="30dp"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="违章查询"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/llyoujia"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/youjia"
                            android:layout_height="30dp"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="今日油价"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/lltiku"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/zhuanxian"
                            android:layout_height="30dp"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="驾考题库"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:id="@+id/llgengduo"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/more"
                            android:layout_height="30dp"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="更多服务"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>




</LinearLayout>